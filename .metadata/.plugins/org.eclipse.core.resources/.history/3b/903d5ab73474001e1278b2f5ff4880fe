int16_t MPU_6050_TestSensor()
{
	HAL_StatusTypeDef status;

	status = HAL_I2C_IsDeviceReady(&hi2c1, (0x69<<1), 4, 100);

	if(HAL_OK == status)
	{
		return 1;
	}
	else
	{
		return 0;
	}

}

int32_t MPU6050_ReadID()
{
	int32_t IDval = 0;
	int8_t buffer[1];
	HAL_StatusTypeDef status;

	HAL_I2C_Mem_Read(&hi2c1, (0x69<<1), 0x75, 1, buffer, 1, 100);

	if(status != HAL_OK)
	{
		//todo
	}

	if(0x68 == buffer[0])
	{
		return 1;
	}
	else
	{
		return 0;
	}

}




